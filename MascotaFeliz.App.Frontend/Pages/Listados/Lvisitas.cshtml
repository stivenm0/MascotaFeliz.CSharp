@page
@model MascotaFeliz.App.Pages.LvisitasModel
@{
}





<table class="table table-striped table-hover ">
        <tr class="bg-dark">
            <td colspan="4"  class="h3 text-light">Visitas de historia:  @Model.historia.Id</td>
        </tr>
        <tr class="bg-secondary text-light">
          <td scope="col">id</td>
          <td scope="col">Fecha</td>
          <td scope="col">Recomendaciones</td>
          <td scope="col">Detalles</td>
        </tr>
        
      <tbody>
      @foreach (var visita in Model.ListaVisitasPyP){ 
        <tr >
          <th scope="row">@visita.Id</th>
          <td>@visita.FechaVisita</td>
          <td class="recomendaciones bg-dark">
            <div> @visita.Recomendaciones</div> 
          </td>
            
          <td>
            <div class="row  gap-2 justify-content-center">
            <button class="btn btn-primary btn-sm col-3" type="button" data-bs-toggle="collapse" data-bs-target="#@visita.EstadoAnimo@visita.Id" aria-expanded="false" aria-controls=@visita.EstadoAnimo@visita.Id>
                ...
              </button>
          <a class="btn btn-outline-warning btn-sm col-3" asp-page="./Editar/EditarVisita" asp-route-visitaId="@visita.Id" asp-route-historiaId="@Model.historia.Id">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
              </svg>
          </a>
            <a class="btn btn-outline-danger btn-sm col-3" asp-page="./Eliminar/EliminarVisita" asp-route-visitaId="@visita.Id" >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
              </svg>
          </a>
          </div>

            <div class="collapse" id=@visita.EstadoAnimo@visita.Id>
              <table class="table table-striped table-hover table-responsive ">
                <tbody>
                  <tr>
                    <th>Peso</th>
                    <td>@visita.Peso</td>
                  </tr>
                  <tr>
                    <th>FR</th>
                    <td>@visita.FrecuenciaRespiratoria</td>
                  </tr>

                  <tr>
                    <th>FC</th>
                    <td>@visita.FrecuenciaCardiaca</td>
                  </tr>

                  <tr>
                    <th>Animo</th>
                    <td>@visita.EstadoAnimo</td>
                  </tr>
                  @if(visita.Historia!=null){
                  <tr>
                    <th>Historia</th>
                    <td>@visita.Historia.Id</td>
                  </tr>
                  }else{
                    <tr>
                    <th>Historia</th>
                    <td>
                    <a class="btn btn-outline-dark col "  asp-page="./Asignar/AsignarV" asp-route-visitaId="@visita.Id"  >asignar</a>
                    </td>
                  </tr>
                  }
                  @if(visita.IdVeterinario!=0){
                  <tr>
                    <th>Veterinario</th>
                    <td>@visita.IdVeterinario</td>
                  </tr>
                  }else{
                    <tr>
                    <th>Veterinario</th>
                    <td>
                    <a class="btn btn-outline-dark  col "  asp-page="./Asignar/AsignarV" asp-route-visitaId="@visita.Id">asignar</a>
                    </td>
                  </tr>
                  }

                 
                </tbody>
              </table>
            </div>
          </td> 
        </tr>
        }
       </tbody>
    </table>