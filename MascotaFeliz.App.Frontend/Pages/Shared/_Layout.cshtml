<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mascota Feliz</title>
    
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="~/css/site.css" />
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-badge-dark bg-white border-bottom box-shadow mb-3 bg-primary" id="nav">
            <div class="container">
                <a class="navbar-brand text-danger h3" asp-area="" asp-page="/Index">MASCOTA FELIZ</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse w-75 justify-content-end">
                    <ul class="navbar-nav flex-grow-1 justify-content-end ">
                        <li class="nav-item">
                            <a class="nav-link text-light h6 me-2 btn btn-dark" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn btn-secondary me-2 h6 dropdown-toggle" type="button" id="
                                dropdown MenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Registrar
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
                                    <a class="dropdown-item"  asp-page="/Listados/Editar/EditarDueno">Dueño</a>
                                    <hr class=" m-0"> <a class="dropdown-item" asp-page="/Listados/Editar/EditarVeterinario">veterinario</a>
                                    
                                    <hr class=" m-1"> <a class="dropdown-item"  asp-page="/Listados/Editar/EditarMascota">Mascota</a>
                                
                                    <hr class=" m-1"> <a class="dropdown-item"  asp-page="/Listados/Editar/EditarHistoria">Historia</a>
                                    
                                    <hr class=" m-1"> <a class="dropdown-item"  asp-page="/Listados/Editar/EditarVisita">Visita</a>
                                </ul>
                                </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light h6 me-0 btn btn-primary"  asp-area="" asp-page="/Listados/Listas">Listado</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid ">
        <main role="main" class="pb-3 d-flex justify-content-center">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
